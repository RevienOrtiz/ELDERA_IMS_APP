# Eldera Health App Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# Environment (development, staging, production)
ENVIRONMENT=development

# Supabase Configuration
# Development Environment
SUPABASE_URL_DEV=https://your-dev-project.supabase.co
SUPABASE_ANON_KEY_DEV=dev_anon_key

# Staging Environment
SUPABASE_URL_STAGING=https://your-staging-project.supabase.co
SUPABASE_ANON_KEY_STAGING=staging_anon_key

# Production Environment
SUPABASE_URL_PROD=https://your-production-project.supabase.co
SUPABASE_ANON_KEY_PROD=prod_anon_key

# IMS API Configuration
IMS_API_URL_DEV=https://api.ims-dev.elderahealth.com
IMS_API_URL_STAGING=https://api.ims-staging.elderahealth.com
IMS_API_URL_PROD=https://api.ims-prod.elderahealth.com

# Webhook Security
IMS_WEBHOOK_SECRET=webhook_secret

# Security Configuration
DEBUG_MODE=false
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Logging Configuration
ENABLE_SECURE_LOGGING=true
LOG_LEVEL=WARNING

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=120

# Security Headers (for API requests)
API_SECURITY_HEADERS_ENABLED=true
CSRF_PROTECTION_ENABLED=true
CORS_ENABLED=true

# SSL/TLS Configuration
SSL_PINNING_ENABLED=true
SSL_CERTIFICATE_HASH=cert_hash

# Encryption Keys (for local data encryption)
LOCAL_ENCRYPTION_KEY=your-32-character-encryption-key
DATA_ENCRYPTION_ENABLED=true

# Monitoring and Analytics
ERROR_REPORTING_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true
ANALYTICS_ENABLED=false

# Feature Flags
MULTI_FACTOR_AUTH_ENABLED=false
BIOMETRIC_AUTH_ENABLED=true
OFFLINE_MODE_ENABLED=true

# Production Configuration
DEVELOPER_MODE=false
API_MOCKING_ENABLED=false
DEBUG_NETWORK_REQUESTS=false